---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
}

const {
  title,
  description = 'SEO, воронки продаж и монетизация трафика. Практические гайды от Артёма Воронова.',
  ogImage = '/og-default.png',
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

// BreadcrumbList для всех страниц кроме главной
const pathParts = Astro.url.pathname.split('/').filter(Boolean);
const breadcrumbs = [
  { name: 'Главная', url: 'https://app.leadfunnel.online/' },
  ...pathParts.map((p, i) => ({
    name: p.charAt(0).toUpperCase() + p.slice(1).replace(/-/g, ' '),
    url: `https://app.leadfunnel.online/${pathParts.slice(0, i + 1).join('/')}/`
  }))
];
const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": breadcrumbs.map((c, i) => ({
    "@type": "ListItem",
    "position": i + 1,
    "name": c.name,
    "item": c.url
  }))
};
---

<!DOCTYPE html>
<html lang="ru">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    <link rel="icon" href="/favicon.ico" sizes="any" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content={new URL(ogImage, Astro.site)} />
    <meta property="og:locale" content="ru_RU" />
    <meta property="og:site_name" content="ВоронщикPro" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <!-- Schema.org WebSite + Organization (главная) -->
    {Astro.url.pathname === '/' && (
      <script type="application/ld+json" set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@graph": [
          {
            "@type": "WebSite",
            "name": "ВоронщикPro",
            "url": "https://app.leadfunnel.online",
            "description": "SEO, воронки продаж и монетизация трафика. Практические гайды от Артёма Воронова.",
            "inLanguage": "ru-RU",
            "author": { "@type": "Person", "name": "Артём Воронов" }
          },
          {
            "@type": "Organization",
            "name": "ВоронщикPro",
            "url": "https://app.leadfunnel.online",
            "sameAs": ["https://t.me/voronshikpro"]
          }
        ]
      })} />
    )}

    <!-- Schema.org BreadcrumbList (все страницы кроме главной) -->
    {pathParts.length > 0 && (
      <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />
    )}

    <!-- Дополнительные Schema-блоки от страниц (Article и т.д.) -->
    <slot name="head" />
  </head>
  <body class="bg-bg text-white min-h-screen flex flex-col">
    <header class="border-b border-border">
      <div class="max-w-4xl mx-auto px-4 py-4 flex items-center justify-between">
        <a href="/" class="text-white font-bold text-lg hover:text-accent transition-colors">
          ВоронщикPro
        </a>
        <nav class="flex items-center gap-6 text-sm text-gray-400">
          <a href="/guides/seo/" class="hover:text-white transition-colors">SEO</a>
